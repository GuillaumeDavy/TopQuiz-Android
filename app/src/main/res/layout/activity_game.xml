<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.GameActivity"
    android:orientation="vertical"
    android:background="@color/bg_color"
    android:padding="8dp">

    <ProgressBar
        android:id="@+id/progressBarQuestions"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="16dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/game_activity_textview_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="150dp"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_corner"
        android:padding="8dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="Question?"
        />

    <Button
        android:id="@+id/game_activity_button_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/blue_pastel"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="16dp"
        android:textSize="16sp"
        tools:text="Answer1"
        />

    <Button
        android:id="@+id/game_activity_button_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue_pastel"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="16dp"
        android:minHeight="60dp"
        android:textSize="16sp"
        tools:text="Answer2"
        />

    <Button
        android:id="@+id/game_activity_button_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="16dp"
        android:backgroundTint="@color/blue_pastel"
        android:textColor="@color/black"
        android:minHeight="60dp"
        android:textSize="16sp"
        tools:text="Answer3"
        />

    <Button
        android:id="@+id/game_activity_button_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/blue_pastel"
        android:textColor="@color/black"
        android:layout_marginHorizontal="16dp"
        android:minHeight="60dp"
        android:textSize="16sp"
        tools:text="Answer4"
        />

</LinearLayout>