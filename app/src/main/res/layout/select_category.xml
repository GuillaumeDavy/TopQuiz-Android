<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".controller.SelectCategoryActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">
    <TextView
        android:id="@+id/textViewSelectCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:text="@string/select_category"
        android:textSize="25sp">
    </TextView>

    <Spinner
        android:id="@+id/spinnerSelectCategory"
        android:layout_width="match_parent"
        android:layout_marginVertical="24dp"
        android:layout_marginHorizontal="16dp"
        android:gravity="center"
        android:layout_height="wrap_content">
    </Spinner>

    <TextView
        android:id="@+id/your_best_score_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="10dp"
        android:textSize="16sp"
        android:text="" />

    <TextView
        android:id="@+id/leaderboard_empty_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="@string/no_leaderboard_yet" />

    <TextView
        android:id="@+id/leaderboard_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="10dp"
        android:textSize="20sp"
        android:text="@string/leaderboard" />

    <ListView
        android:id="@+id/leaderboard_list_view"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="10dp"
        android:layout_height="192dp" />

    <Button
        android:id="@+id/buttonPlaySelectCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/button_bg"
        android:gravity="center"
        android:text="@string/lets_play"
        android:textSize="25sp"></Button>

    <Button
        android:id="@+id/buttonAddQuestionSelectCategory"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="16dp"
        android:backgroundTint="@color/button_bg"
        android:layout_height="wrap_content"
        android:text="@string/add_question"
        android:textSize="20sp"/>

</LinearLayout>